---
import "./RegisterForm.scss";
---

<article class="RegisterForm">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="fw-bold">
          <span>Login </span>
          <span>Ingresa tus datos</span>
        </h1>
        <form action="#">
          <div class="input-box w-100">
            <input class="crypto-input" type="text" />
            <label>Nombre Completo</label>
          </div>
          <div class="input-box w-100">
            <input class="crypto-input" type="email" />
            <label>Email</label>
          </div>
          <div class="phone-container w-100 d-flex justify-content-between">
            <div class="input-box code">
              <input class="crypto-input" type="text" />
              <label>Lada</label>
            </div>
            <div class="input-box phone">
              <input class="crypto-input" type="text" />
              <label>Móvil</label>
            </div>
          </div>
          <div class="phone-container w-100 d-flex justify-content-between">
            <div class="input-box code">
              <input class="crypto-input" type="text" />
              <label>Lada</label>
            </div>
            <div class="input-box phone">
              <input class="crypto-input" type="text" />
              <label>Teléfono fijo</label>
            </div>
          </div>
          <div class="input-box w-100">
            <input class="crypto-input" type="password" />
            <label>Password</label>
          </div>
        </form>
        <button class="crypto-button" type="button">Registrarme</button>
      </div>
    </div>
  </div>
</article>
