---
import "./LoginForm.scss";
---

<article class="LoginForm">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="fw-bold">
          <span>Login </span>
          <span>Ingresa tus datos</span>
        </h1>
        <form action="#">
          <div class="input-box w-100">
            <input class="crypto-input" type="email" />
            <label>Email</label>
          </div>
          <div class="input-box w-100">
            <input class="crypto-input" type="password" />
            <label>Password</label>
          </div>
        </form>
        <button class="crypto-button" type="button">Entrar</button>
      </div>
    </div>
  </div>
</article>
