---
import "./DevelopersToggle.scss";
---

<div class="DevelopersToggle">
  <div class="toggle-option">API</div>
  <div class="toggle-option active">Componentes</div>
</div>

<script>
  const toggleOptions = document.querySelectorAll(
    ".DevelopersToggle .toggle-option"
  );

  toggleOptions.forEach((option) => {
    option.addEventListener("click", function () {
      toggleOptions.forEach((opt) => opt.classList.remove("active"));
      option.classList.add("active");

      const activeBg = document.querySelector(".active-bg");
      if (activeBg) {
        if (
          option &&
          option.textContent &&
          option.textContent.trim() === "Componentes"
        ) {
          activeBg.classList.add("active-right");
        } else {
          activeBg.classList.remove("active-right");
        }
      }
    });
  });

  const activeBg = document.createElement("div");
  activeBg.classList.add("active-bg");
  document.querySelector(".DevelopersToggle")?.appendChild(activeBg);

  const initialActive = document.querySelector(
    ".DevelopersToggle .toggle-option.active"
  );
  if (
    initialActive &&
    initialActive.textContent &&
    initialActive.textContent.trim() === "Componentes"
  ) {
    activeBg.classList.add("active-right");
  }
</script>
